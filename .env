# Gemini API Configuration
GEMINI_API_KEY=AIzaSyAFpXkqiVogBRtxQn8WEOfLs8IO5MwqVM0
# Server Configuration
GEMINI_MODEL=gemini-1.5-flash
# Alternative models: gemini-1.5-pro, gemini-live-2.5-flash-preview

# Server Configuration
PORT=3000
NODE_ENV=development
# NODE_ENV options: development, production, staging

# Security Configuration
JWT_SECRET=your_jwt_secret_here
CORS_ORIGIN=http://localhost:3000
# For production: CORS_ORIGIN=https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100
# Maximum requests per window

# Database Configuration (if needed for future enhancements)
# DATABASE_URL=postgresql://username:password@localhost:5432/revolt_ai
# REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=info
# LOG_LEVEL options: error, warn, info, debug

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
# WebSocket heartbeat interval in milliseconds
WS_MAX_CONNECTIONS_PER_IP=10

# AI Features Configuration
AUTO_RESPONSES_ENABLED=true
CONTEXT_MEMORY_SIZE=50
# Number of messages to keep in context memory
DEFAULT_RESPONSE_PERSONALITY=enthusiastic
# Options: enthusiastic, professional, casual, technical

# Analytics Configuration
ANALYTICS_ENABLED=true
SESSION_TIMEOUT_MINUTES=60

# Feature Flags
ENABLE_VOICE_FEATURES=false
ENABLE_IMAGE_PROCESSING=false
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_USER_AUTHENTICATION=false

# External APIs (for future integrations)
# REVOLT_API_BASE_URL=https://api.revoltmotors.com
# REVOLT_API_KEY=your_revolt_api_key

# Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=300000
# Health check interval in milliseconds (5 minutes)
ENABLE_METRICS=true